<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="RtlSymmetry">

    <data>

        <variable
            name="bookmark"
            type="com.owllife.youtubebookmark.domain.entity.BookMarkEntity"/>

        <variable
            name="viewModel"
            type="com.owllife.youtubebookmark.presentation.main.BookMarkListViewModel"/>
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/list_item_background"
            android:onClick="@{() -> viewModel.openBookmarkEvent(bookmark)}"
            android:orientation="vertical"
            android:paddingBottom="15dp">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                bind:bookmark_list_item_thumbnail="@{bookmark}"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumbnail"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    style="@style/PrimaryLabelTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="13dp"
                    android:text="@{bookmark.title}"/>

                <ImageView
                    android:id="@+id/ic_more"
                    android:layout_width="34dp"
                    android:layout_height="29dp"
                    android:foreground="@drawable/list_item_background"
                    android:paddingStart="5dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="5dp"
                    android:src="@drawable/ic_more"
                    android:tint="@color/primary_text"
                    bind:bookmark_list_item="@{bookmark}"
                    bind:bookmark_list_item_viewmodel="@{viewModel}"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>